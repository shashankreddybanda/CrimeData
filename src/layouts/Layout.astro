---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import "@fontsource-variable/exo";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/portfolio/logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<title>Your Title</title>
	</head>
	<body>
		<div class="LogoBar">
			<div class="logo-box">
				<p class="logo">Crime Data</p>
			</div>
		</div>
		<ul class="navbar">
			<li><a href="/">Area</a></li>
			<li><a href="/time">Time</a></li>
			<li><a href="/race">Race</a></li>
			<li><a href="/gender">Gender</a></li>
			<li><a href="/month">Monthly</a></li>
		</ul>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: "Exo Variable", sans-serif;
		background: #010f26;
		color: #d5e4fa;
		font-size: 16px;
	}
	body {
		display: inline-flex;
		padding: 0rem 0rem;
		margin: 0%;
		flex-direction: column;
		align-items: flex-start;
		gap: 0.0625rem;
	}
	.LogoBar {
		display: flex;
		padding: 4rem min(var(--main-padding, 8rem), 8vw);
		align-items: center;
		gap: 0.625rem;
		align-self: stretch;
	}
	.logo-box {
		display: flex;
		justify-content: center;
		align-items: center;
		border: 4px solid #f40076;
		border-radius: 5px;
	}
	.logo {
		font-size: 30px;
		font-weight: 900;
		color: #225dba;
		padding: 20px;
		margin: 0px;
	}
	ul.navbar {
		list-style-type: none;
		margin: 0;
		padding: 1rem min(var(--main-padding, 8rem), 8vw);
		overflow: hidden;
		display: inline-flex;
		color: #f40076;
	}
	ul.navbar li a {
		display: block;
		color: #f40076;
		text-align: center;
		padding: 1px 16px;
		text-decoration: none;
		font-size: 28px;
	}
</style>
